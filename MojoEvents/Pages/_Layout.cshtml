<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MojoEvents</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
</head>
<body>
    <header>
        <img src="https://www.mojo.nl/images/mojo-logo-triangle.svg">
        <h1>Events</h1>
    </header>
    <nav>
        <a asp-page="index" class="@(ViewData["CurrentPage"]=="home" ? "active" : "")">Home</a>
        <a asp-page="festivals" class="@(ViewData["CurrentPage"]=="festivals" ? "active" : "")">Festivals</a>
        <a asp-page="Users" class="@(ViewData["CurrentPage"]=="users" ? "active" : "")">Users</a>
        <a asp-page="Settings" class="@(ViewData["CurrentPage"]=="settings" ? "active" : "")">Settings</a>
        <a asp-page="Analytics" class="@(ViewData["CurrentPage"]=="analytics" ? "active" : "")">Analytics</a>
        <div class="spacer"></div>
        <a asp-page="Login" class="special">Logout</a>
    </nav>
    <main>
        @RenderBody()
        </main>
    <environment include="Development">
        <script src="~/js/site.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
